{
  "name": "xoops/regdom",
  "description": "OO adaptation of Florian Sager's regdom library for querying Mozilla Public Suffix List",
  "keywords": [
    "public",
    "suffix",
    "tld",
    "regdom"
  ],
  "homepage": "https://github.com/XOOPS/RegDom",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Richard Griffith",
      "email": "richard@geekwright.com"
    }
  ],
  "require": {
    "php": "^7.4.0 || ^8.4.0",
    "symfony/polyfill-mbstring": "^1.33.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6|^11.5",
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "autoload": {
    "psr-4": {
      "Xoops\\RegDom\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Xoops\\RegDom\\": "tests/unit/"
    }
  },
  "bin": [
    "bin/reloadpsl"
  ],
  "scripts": {
    "test": "phpunit",
    "lint": "php -l src",
    "fix": "phpcbf --standard=PSR12 src"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/XOOPS/RegDom/issues",
    "source": "https://github.com/XOOPS/RegDom"
  }
}

